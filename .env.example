# GitLab Configuration
GITLAB_HOST=gitlab.ssit.company.com
GITLAB_URL=http://gitlab.ssit.company.com:8088
GITLAB_SSH_HOST=ssh.gitlab.ssit.company.com:2222
GITLAB_HTTP_PORT=8088
GITLAB_SSH_PORT=2222

# Admin Configuration
GITLAB_ROOT_PASSWORD=YourSecurePassword123!
GITLAB_ROOT_EMAIL=admin@ssit.company.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Monitoring Configuration
PROMETHEUS_ENABLE=true
PROMETHEUS_SCRAPE_INTERVAL=30
GRAFANA_ENABLE=false

# Resource Limits
GITLAB_MEMORY_LIMIT=6G
GITLAB_CPU_LIMIT=4
GITLAB_MEMORY_RESERVATION=3G
GITLAB_CPU_RESERVATION=2

# Application Performance Tuning
PUMA_WORKERS=2
PUMA_MAX_THREADS=4
PUMA_MIN_THREADS=1
SIDEKIQ_CONCURRENCY=3

# Database Configuration
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_WORK_MEM=8MB
POSTGRES_MAINTENANCE_WORK_MEM=32MB

# Redis Configuration
REDIS_MAX_MEMORY=128MB

# GitLab Features
DEFAULT_PROJECTS_LIMIT=50
USAGE_PING_ENABLED=false
SEAT_LINK_ENABLED=false

# GitLab Runner Resource Limits
RUNNER_MEMORY_LIMIT=1G
RUNNER_CPU_LIMIT=1
RUNNER_MEMORY_RESERVATION=256M
RUNNER_CPU_RESERVATION=0.25

# SMTP Configuration (optional)
SMTP_ENABLE=false
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USER_NAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=gmail.com
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_TLS=false

# LDAP Configuration (optional)
LDAP_ENABLED=false
LDAP_HOST=
LDAP_PORT=389
LDAP_UID=sAMAccountName
LDAP_METHOD=plain
LDAP_BASE=
LDAP_USER_FILTER=
LDAP_BIND_DN=
LDAP_PASSWORD=
